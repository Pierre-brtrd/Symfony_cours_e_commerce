{% extends 'base.html.twig' %}

{% block title %}
	{{ product.title }}
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-2 product-show">
		<h1 class="text-center">
			Découvrez notre produit
			{{ product.title }}
		</h1>
		<a href="{{ path('app.products.index') }}" class="btn btn-primary">Retour à la liste</a>
		<div class="row mt-4 product-show-header">
			<div class="col-md-6">
				<img src="{{ vich_uploader_asset(product) }}" alt="{{ product.title }}" loading="lazy" class="product-main-img">
			</div>
			<div class="col-md-6">
				<h2 class="product-show-title">{{ product.title }}</h2>
				{% for category in product.categories %}
					<div class="d-flex align-items-center flex-wrap gap-2">
						<span class="badge bg-secondary">
							<i class="bi bi-tags-fill"></i>
							{{ category.name }}
						</span>
					</div>
				{% endfor %}
				<p class="product-show-short-desc">{{ product.shortDescription|sanitize_html }}</p>
				<p class="product-show-price mb-3">{{ product.priceTTC|format_currency('EUR') }}</p>
				{{ form_start(form) }}
				{{ form_widget(form) }}
				{{ form_end(form) }}
			</div>
		</div>
		<div class="product-desc-content mt-4 card p-3 mb-4">
			<strong>Description:</strong>
			{{ product.description|sanitize_html }}
		</div>
	</section>
{% endblock %}
